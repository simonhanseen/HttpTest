<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HttpTest.View.UpdateOrDeleteBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="titleEntry" Placeholder="Title"/>
            <Entry x:Name="isbnEntry" Placeholder="ISBN"/>
            <Entry x:Name="descriptionEntry" Placeholder="Description"/>
            <Button x:Name="updateBookButton" Text="Update Book" Clicked="updateBookButton_Clicked"></Button>
            <Button x:Name="deleteBookButton" Text="Delete Book" Clicked="deleteBookButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>