<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HttpTest.View.AddBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="titleEntry" Placeholder="Title"/>
            <Entry x:Name="isbnEntry" Placeholder="ISBN"/>
            <Entry x:Name="descriptionEntry" Placeholder="Description"/>
            <Button x:Name="addBookButton" Text="Add Book" Clicked="addBookButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>